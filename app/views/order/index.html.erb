<div class="container">

<div class="pagetitle">
    <h1 class="display-3">Checkout</h1>
</div>
<div class="container text-center">
    <div class="row">
        <div class="col-sm-12 productdetails">
            <div class="row">
                <div class="col-sm-10">
                                <% if @order.length > 0 %>
                                    <% @order.each do |order| %>
                                        <p><%= order.order_number %><p>
                                        <p><%= order.item.name %><p>
                                        <p>Rarity: <%= order.item.rarity.name %><p>
                                        <p>Quantity: <%= order.quantity %><p>
                                        <p>Price: <%= order.item.price %><p>
                                        <p>Order Status: <%= order.order_status.status %><p>
                                        <p>Date: <%= order.created_at %><p>
                                        <hr>
                                    <% end %>
                                <% else %>
                                    <p>No orders yet, try looking for something cool
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</div>
